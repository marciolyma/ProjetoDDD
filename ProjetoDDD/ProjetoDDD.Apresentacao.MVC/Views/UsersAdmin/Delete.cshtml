@model IdentitySample.Models.ApplicationUser

@{
    ViewBag.Title = "Delete";
}

<h2>Deletar.</h2>

<h3>Tem certeza de que deseja excluir este usuário?</h3>
<div>
    <h4>Deletar usuário.</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Nome")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NomeUsuario)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-default" /> |
            @Html.ActionLink("Voltar a lista", "Index")
        </div>
    }
</div>
